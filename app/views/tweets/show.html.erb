<%= react_component("PostWrapper", {
    tweet: TweetSerializer.new(@tweet), 
    updatedAt: tweet_updated_at_formatted_full(@tweet.updated_at),
    isLiked: @tweet.likers.include?(current_user),
    postType: "status"
    }) %>
<% @tweet.children.each do |reply| %>
  <%= react_component("PostWrapper", {tweet: TweetSerializer.new(reply), updatedAt: tweet_updated_at_formatted_brief(reply.updated_at), replyingTo: reply.parent.user.handle, postType: "tweet"}) %>
<% end %>
