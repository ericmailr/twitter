<h1><%= @user.username %></h1>
<p>@<%= @user.handle %></p>
<p>Joined <%= date_formatted(@user.created_at) %></p>
<%= link_to "#{@user.followers.length} Followers", followers_path(@user.handle) %>
<%= link_to "#{@user.followed_users.length} Following", following_path(@user.handle) %>

<% @posts.each do |post| %>
    <% if post.class.name == "Tweet" %>
        <% if post.parent %>
            <%= react_component("tweets/Reply", {reply: TweetSerializer.new(post), replyUpdatedAt: tweet_updated_at_formatted_brief(post.updated_at), parent: TweetSerializer.new(post.parent), parentUpdatedAt: tweet_updated_at_formatted_brief(post.parent.updated_at), replyIsLiked: post.likers.include?(current_user), parentIsLiked: post.parent.likers.include?(current_user)}) %>
        <% else %>
            <%= react_component("FeedTweet", {tweet: TweetSerializer.new(post), updatedAt: tweet_updated_at_formatted_brief(post.updated_at), isLiked: post.likers.include?(current_user)}) %> 
        <% end %>
    <% elsif post.class.name == "Retweet" %>
        <%= react_component("retweets/Retweet", {retweet: post, tweet: post.tweet, retweeter: post.retweeter, tweeter: post.tweet.tweeter, updatedAt: tweet_updated_at_formatted_brief(post.updated_at), tweetUpdatedAt: tweet_updated_at_formatted_brief(post.tweet.updated_at), comment: post.comment}) %>
    <% end %>
    
    <%# add another elsif for new QuoteTweet model, remove comment column from retweets, add QuoteTweets to @posts in controller, add serializers for both Retweet and QuoteTweet #%>
<% end %>
