<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <% if current_user %>
        <div id="search">
          <%= form_tag search_path, method: :get do %>
            <%= text_field_tag :query %>
            <%= submit_tag "Search" %>
          <% end %>
        <%= link_to "Log Out", logout_path, method: :delete %>
        </div>

      <nav>
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Explore", root_path %></li>
          <li><%= link_to "Notifications", root_path %></li>
          <li><%= link_to "Messages", root_path %></li>
          <li><%= link_to "Bookmarks", root_path %></li>
          <li><%= link_to "Lists", root_path %></li>
          <li><%= link_to "Profile", profile_path(current_user.handle) %></li>
          <li><%= link_to "More", root_path %></li>
        </ul>
      </nav>
        <%= render :partial => "layouts/who-to-follow" %>
      <% end %>
    <div id="container">
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
