<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if current_user %>
        <ul>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Explore", root_path %></li>
          <li><%= link_to "Notifications", root_path %></li>
          <li><%= link_to "Messages", root_path %></li>
          <li><%= link_to "Bookmarks", root_path %></li>
          <li><%= link_to "Lists", root_path %></li>
          <li><%= link_to "Profile", profile_path(current_user.handle) %></li>
          <li><%= link_to "More", root_path %></li>
        </ul>
      <% end %>
    </nav>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>

    <% if current_user %>
      Logged in as <%= link_to current_user.username, profile_path(current_user.handle) %>.
      <%= link_to "Log Out", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Log In", login_path %>
    <% end %>

    <div id="search">
      <%= form_tag search_path, method: :get do %>
        <%= text_field_tag :query %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
    <% if current_user %>
      <%= render :partial => "layouts/who-to-follow" %>
    <% end %>
    <%= yield %>
  </body>
</html>
